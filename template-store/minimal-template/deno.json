{
  "inspatial": {
    "serve": {
      "build": {
        "css": {
          "engine": "iss",
          "input": "./src/config/app.css",
          "output": "./dist/kit.css",
          "contentGlobs": ["src/**/*.{ts,tsx,js,jsx}"]
        }
      }
    }
  },
  "tasks": {
    "serve": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run src/config/render.ts",
    "build": "deno bundle --platform=browser --output=dist/bundle.js --sourcemap src/config/render.ts",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf deno.lock && rm -rf src/app/.inroute && rm -f src/types/extension-trigger-types.generated.d.ts"
  },
  "imports": {
    "@inspatial/kit": "jsr:@inspatial/kit@^0.7.2"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "dom.iterable"],
    "jsxImportSource": "@inspatial/kit",
    "jsx": "react-jsx"
  }
}
